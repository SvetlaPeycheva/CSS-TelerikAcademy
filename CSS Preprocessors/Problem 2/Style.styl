body {
  line-height: 1;
  color: #000;
  background: #fff;
}
ol, ul {
  list-style: none;
}
table {
  border-collapse: separate;
  border-spacing: 0;
  vertical-align: middle;
}
caption, th, td {
  text-align: left;
  font-weight: normal;
  vertical-align: middle;
}
a img {
  border: none;
}
#wrapper {
  border: 1px dotted #ccc;
  border-radius: 5px;
  margin: 7px;
}
.animals {
  list-style-type: none;
}
.animals li {
  display: inline-block;
  height: 120px;
  width: 120px;
  overflow: hidden;
  margin: 7px;
  position: relative;
}
.animals li img {
  width: auto;
  height: 100%;
  position: absolute;
  left: -25%;
}
#full-sized img {
  display: none;
}
#full-sized :target {
  display: block;
  position: absolute;
  left: 14px;
  width: 550px;
  height: auto;
}